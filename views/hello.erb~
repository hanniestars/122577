<html>
	<head>
		<title>Hello from Sinatra</title>
	</head>
	<body>
		<h1>Hello, <%= @name %></h1>
		<h2>You are <%= @age %> years old</h2>
		<% if @gender == 'male' %>
			<h3>You are a boy</h3>
		<% elsif @gender == 'female' %>
			<h3>You are a girl</h3>
		<% else %>
			<h3>You are a creature</h3>
		<% end %>
	</body>
</html>
